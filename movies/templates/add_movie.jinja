{% extends "base.jinja" %}
{% block content %}
<div class="section">
  <form class="box" autocomplete="off" action="/add_movie" method="POST">
    <div class="field">
      <label class="label">Movie Title:</label>
      <div class="control">
        <input class="input is-info is-small" type="text" id="movie_title" name="movie_title" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Rating:</label>
      <div class="control">
        <input class="input is-info is-small" value="5.0" type="number" min="1" max="10" step="0.1" id="rating"
          name="rating" required>
      </div>
    </div>
    <div class="control">
      <input class="button is-info is-small" type="submit" value="Submit">
    </div>
  </form>
</div>
{% endblock %}